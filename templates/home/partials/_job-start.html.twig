		<!-- Nav tabs -->
		<ul class="nav nav-tabs nav-advance theme-bg" role="tablist">
			<li class="nav-item active">
				<a class="nav-link" data-toggle="tab" href="#recent" role="tab">
					Recent Jobs</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" data-toggle="tab" href="#featured" role="tab">
